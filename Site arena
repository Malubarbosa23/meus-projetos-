  <script>

  function salvarLocalStorage(chave, dados) {</p> <p dir="ltr">    localStorage.setItem(chave, JSON.stringify(dados));</p> <p dir="ltr">  }

  function carregarLocalStorage(chave) {</p> <p dir="ltr">    return JSON.parse(localStorage.getItem(chave)) || [];</p> <p dir="ltr">  }

  const inscricaoForm = document.getElementById("inscricao-form");

  const aviso = document.getElementById("aviso");

  let inscricoes = carregarLocalStorage("inscricoes");

  inscricaoForm.addEventListener("submit", e => {</p> <p dir="ltr">    e.preventDefault();</p> <p dir="ltr">    if (inscricoes.length >= 24) {</p> <p dir="ltr">      aviso.classList.remove("hidden");</p> <p dir="ltr">      return;</p> <p dir="ltr">    }

    const nome = document.getElementById("inscricao-nome").value;

    inscricoes.push({ nome });

    salvarLocalStorage("inscricoes", inscricoes);

    renderChaveamento();

    inscricaoForm.reset();

    aviso.classList.add("hidden");

    document.getElementById("chaveamento").classList.remove("hidden");

    document.getElementById("toggle-chaveamento").innerText = "Esconder Chaveamento";

    document.getElementById("chaveamento").scrollIntoView({ behavior: "smooth" });

  });

  function renderChaveamento() {</p> <p dir="ltr">    const slots = document.querySelectorAll("#chaveamento .space-y-4 > div");</p> <p dir="ltr">    slots.forEach((slot, i) => {</p> <p dir="ltr">      if (inscricoes && inscricoes.length > i && inscricoes[i].nome) {</p> <p dir="ltr">        slot.textContent = inscricoes[i].nome;</p> <p dir="ltr">        slot.classList.remove("bg-gray-800", "text-gray-400");</p> <p dir="ltr">        slot.classList.add("bg-gray-900");</p> <p dir="ltr">      } else {</p> <p dir="ltr">        slot.textContent = "Her√≥i " + (i + 1);</p> <p dir="ltr">        slot.classList.remove("bg-gray-900");</p> <p dir="ltr">        slot.classList.add("bg-gray-800", "text-gray-400");</p> <p dir="ltr">      }

    });

  }

  renderChaveamento();

  const toggleBtn = document.getElementById("toggle-chaveamento");

  const chaveamento = document.getElementById("chaveamento");

  toggleBtn.addEventListener("click", () => {</p> <p dir="ltr">    if (chaveamento.classList.contains("hidden")) {</p> <p dir="ltr">      chaveamento.classList.remove("hidden");</p> <p dir="ltr">      toggleBtn.innerText = "Esconder Chaveamento";</p> <p dir="ltr">    } else {</p> <p dir="ltr">      chaveamento.classList.add("hidden");</p> <p dir="ltr">      toggleBtn.innerText = "Mostrar Chaveamento";</p> <p dir="ltr">    }

  });

  const muralForm = document.getElementById("mural-form");

  const muralMensagens = document.getElementById("mural-mensagens");

  let mural = carregarLocalStorage("mural");

  muralForm.addEventListener("submit", e => {</p> <p dir="ltr">    e.preventDefault();</p> <p dir="ltr">    const nome = document.getElementById("mural-nome").value;</p> <p dir="ltr">    const msg = document.getElementById("mural-msg").value;</p> <p dir="ltr">    mural.push({ nome, msg });

    salvarLocalStorage("mural", mural);

    renderMural();

    muralForm.reset();

  });

  function renderMural() {</p> <p dir="ltr">    muralMensagens.innerHTML = "";</p> <p dir="ltr">    mural.forEach(m => {</p> <p dir="ltr">      const div = document.createElement("div");</p> <p dir="ltr">      div.className = "card p-4 rounded-lg shadow-md";</p> <p dir="ltr">      div.innerHTML = `<strong class="accent-text">${m.nome}:</strong> <p>${m.msg}</p>`;

      muralMensagens.appendChild(div);

    });

  }

  renderMural();

  const sections = document.querySelectorAll("section");

  const observer = new IntersectionObserver(entries => {</p> <p dir="ltr">    entries.forEach(entry => {</p> <p dir="ltr">      if (entry.isIntersecting) {</p> <p dir="ltr">        entry.target.classList.add("visible");</p> <p dir="ltr">      }

    });

  }, { threshold: 0.2 });

  sections.forEach(sec => observer.observe(sec));

  </script>

