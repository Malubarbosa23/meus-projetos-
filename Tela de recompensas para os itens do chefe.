  <div class="wrapper">
    <h1>ðŸŽ² Sorteador Roxo</h1>
    <div class="subtitle">Adicione nomes ou use um intervalo numÃ©rico</div>

    <div class="item-box">
      <input type="text" id="itemName" placeholder="Nome do item sorteado (ex: Brinde, PrÃªmio 1)" />
    </div>

    <div class="list-box" id="nameList">
      <!-- Nomes adicionados aparecerÃ£o aqui -->
    </div>

    <div class="item-box">
      <input type="text" id="nameInput" placeholder="Digite um nome" />
      <button id="addNameBtn" class="draw-btn" style="margin-top: 10px;">Adicionar Nome</button>
    </div>

    <div class="range-box">
      <input type="number" id="min" placeholder="MÃ­nimo" value="1">
      <input type="number" id="max" placeholder="MÃ¡ximo" value="10">
    </div>

    <button class="draw-btn" id="drawBtn">Sortear Agora</button>

    <div class="result-box" id="resultBox" style="display: none;">
      <div class="result-label">Resultado:</div>
      <div class="result-value" id="resultWinner">...</div>
    </div>

    <footer>
      Feito com ðŸ’œ e sorte! â€” Digite nomes ou use intervalo de nÃºmeros.
    </footer>
  </div>

  <script>
    const nameInput = document.getElementById('nameInput');
    const addNameBtn = document.getElementById('addNameBtn');
    const drawBtn = document.getElementById('drawBtn');
    const nameList = document.getElementById('nameList');
    const resultBox = document.getElementById('resultBox');
    const resultWinner = document.getElementById('resultWinner');
    const minInput = document.getElementById('min');
    const maxInput = document.getElementById('max');
    const itemNameInput = document.getElementById('itemName');

    // Adicionar nome Ã  lista
    addNameBtn.addEventListener('click', () => {
      const name = nameInput.value.trim();
      if (name) {
        const chip = document.createElement('div');
        chip.className = 'chip';
        chip.textContent = name;
        nameList.appendChild(chip);
        nameInput.value = '';
      }
    });

    // Sortear
    drawBtn.addEventListener('click', () => {
      const chips = nameList.querySelectorAll('.chip');
      const itemName = itemNameInput.value.trim() || 'Item';

      let winner = '';

      if (chips.length > 0) {
        const names = Array.from(chips).map(chip => chip.textContent);
        const randomIndex = Math.floor(Math.random() * names.length);
        winner = names[randomIndex];
      } else {
        const min = parseInt(minInput.value, 10);
        const max = parseInt(maxInput.value, 10);
        if (isNaN(min) || isNaN(max) || max < min) {
          alert('Digite um intervalo vÃ¡lido.');
          return;
        }
        const randomNum = Math.floor(Math.random() * (max - min + 1)) + min;
        winner = randomNum;
      }

      resultWinner.textContent = `${itemName}: ${winner}`;
      resultBox.style.display = 'block';
    });
  </script>
